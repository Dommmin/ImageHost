<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html" lang="en_US">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ImageHost - {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/MDB/css/custom.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/MDB/css/mdb.dark.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/MDB/css/simpleLightbox.min.css') }}">

            {{ encore_entry_link_tags('app') }}

            <!-- Font Awesome -->
            <link
                    rel="stylesheet"
                    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            />
            <!-- Google Fonts Roboto -->
            <link
                    rel="stylesheet"
                    href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap"
            />
        {% endblock %}

    </head>
    <body>
    <!--NAV-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient ">
            <!-- Container wrapper -->
            <div class="container">
                <!-- Toggle button -->
                <button
                        class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                >
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
                    <div class="navbar-nav ">
                        <a class="navbar-brand" href="{{ path('upload') }}">ImageHost</a>
                        <a class="nav-link {% if app.request.get('_route') == 'upload' %} active {% endif %}" aria-current="page" href="{{ path('upload') }}">Home</a>
                        <a class="nav-link {% if app.request.get('_route') == 'latest_photos' %} active {% endif %}" href="{{ path('latest_photos') }}">Latest</a>
                        {% if app.user %}
                            <a class="nav-link {% if app.request.get('_route') == 'my_photos' %} active {% endif %}" href="{{ path('my_photos') }}">My Photos</a>
                        {% endif %}
                    </div>
                </div>

                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Icon -->

                    <!-- Avatar -->
                    {% if app.user %}
                        <u class="text-decoration-none me-2">{{ app.user.email }}</u>
                    {% endif %}

                    <div class="dropdown">
                        <a
                                class="dropdown-toggle d-flex align-items-center hidden-arrow rounded-circle fa-2x"
                                href="#"
                                id="navbarDropdownMenuAvatar"
                                role="button"
                                data-mdb-toggle="dropdown"
                                aria-expanded="false"
                        >
                            {% if app.user %}
                                <i class="fas fa-user-circle link-success"></i>
                            {% else %}
                                <i class="fas fa-user-circle text-muted"></i>
                            {% endif %}

{#                            <img#}
{#                                    <i class="fas fa-user-circle"></i>#}
{#                                    class="rounded-circle"#}
{#                                    height="25"#}
{#                                    alt="Black and White Portrait of a Man"#}
{#                                    loading="lazy"#}
{#                            />#}
                        </a>



                        <ul
                                class="dropdown-menu dropdown-menu-end"
                                aria-labelledby="navbarDropdownMenuAvatar"
                        >
                            {% if app.user %}
                                <li>
                                    <a class="disabled dropdown-item" href="#">My profile</a>
                                </li>
                                <li>
                                    <a class="disabled dropdown-item" href="#">Settings</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
                                </li>
                            {% else %}
                                <li>
                                    <a class="dropdown-item {% if app.request.get('_route') == 'app_login' %} active {% endif %}" href="{{ path('app_login') }}">Log in</a>
                                </li>
                                <li>
                                    <a class="dropdown-item {% if app.request.get('_route') == 'app_register' %} active {% endif %}" href="{{ path('app_register') }}">Register</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
    <!-- Navbar -->
    {% block javascripts %}
        <script src="{{ asset('assets/MDB/js/jquery_3.6.0.js') }}"></script>
        <script src="{{ asset('assets/MDB/js/mdb.min.js') }}"></script>
        <script src="{{ asset('assets/MDB/js/simpleLightbox.min.js') }}"></script>
        <script src="{{ asset('assets/MDB/js/scripts.js') }}"

        {{ encore_entry_script_tags('app') }}
    {% endblock %}
        <!--CONTENT-->
        {% block body %}{% endblock %}

        <!--FOOTER-->
        <footer>
            <div class="pt-3 pb-3 bg-gradient">
                <span class="d-block text-center text-white">&copy; Dommmin - ImageHost</span>
            </div>
        </footer>


    </body>
</html>
